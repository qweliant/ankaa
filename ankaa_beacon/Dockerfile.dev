FROM hexpm/elixir:1.18.3-erlang-27.3.3-debian-bullseye-20250407-slim

# Install build dependencies
RUN apt-get update -y && apt-get install -y \
    build-essential \
    git \
    inotify-tools \
    curl \
    && curl -sL https://deb.nodesource.com/setup_20.x | bash - \
    && apt-get install -y nodejs \
    && apt-get clean && rm -f /var/lib/apt/lists/*_*

WORKDIR /app

# Install hex + rebar
RUN mix local.hex --force && \
    mix local.rebar --force

# Set development environment
ENV MIX_ENV=dev

# We don't copy the source code here because it will be mounted as a volume
# This allows for live code reloading

# Default Phoenix port
EXPOSE 4000

# Install mix dependencies and npm dependencies on container start
CMD ["sh", "-c", "cd assets && npm install && cd .. && mix deps.get && mix ecto.migrate && mix phx.server"]